        $("#generateNumber").on("click", function () {
            var randomNumber = Math.floor(Math.random() * 100) + 1;
            var display = $("#Number");
            display.text("0");
            let currentNumber = 0;
            const incrementTime = 20; // Time in ms between each increment

            const incrementNumber = () => {
                if (currentNumber < randomNumber) {
                    currentNumber++;
                    display.text(currentNumber);
                    setTimeout(incrementNumber, incrementTime);
                } else {
                    
                    $.ajax({
                        type: "POST",
                        url: "/Game/AddAmount?RandomNumber=" + randomNumber,
                        success: function (data) {
                            console.log(data.status)
                            if (data.status == -2) {
                                toastr.error("You have no chance left please buy chance");
                                return;
                            } else if (data.status == -1) {
                                toastr.error("You have Exceeded Today Limit");
                                return;
                            } else if (data.status == 1) {
                                toastr.success(`Added ${randomNumber} Amount Successfully`);
                                return;
                            } else {
                                toastr.error("Something Went Wrong");
                                return;
                            }
                        }
                    });

                    display.text(randomNumber);
                }
            };

            incrementNumber();
        });
        $("#buyChance").on("click", function () {
            $.ajax({
                type: "POST",
                url: "/Game/BuyChance",
                success: function (data) {
                    if (data.success) {
                        toastr.success("You buy a One Chance");
                        return;
                    } else {
                        toastr.error("You Have a one Chance you can't buy more chance");
                        return;
                    }
                }
            })
        })

    })
</script>